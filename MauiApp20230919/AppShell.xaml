<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp20230919.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp20230919"
    Shell.FlyoutBehavior="Disabled">

 

    <TabBar>
       <ShellContent
       Title="Home"
       ContentTemplate="{DataTemplate local:MainPage}"
       Route="MainPage"
       Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}"/>
    
       

       <ShellContent
         Title="About"
         ContentTemplate="{DataTemplate local:AboutPage}"
         Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
       
       <ShellContent
           Title="Fruit"
           ContentTemplate="{DataTemplate local:FruitPage}"
           Icon="{OnPlatform 'icon_fruit.png', iOS='icon_fruit_ios.png', MacCatalyst='icon_fruit_ios.png'}">
       </ShellContent>
    </TabBar>

</Shell>
